/* This code creates the following triangle
#
##
###
####
#####
######
#######
*/
let buildingBlock = "#"; 
let counter = 0;
while (counter < 7) {
  console.log(buildingBlock);
  buildingBlock = buildingBlock + "#";
  counter = counter + 1;
}
/* Alternatively you can shorten your code using .length  and a for loop */
for(let buildingBlock = "#"; buildingBlock.length < 8 ; buildingBlock+= "#"){
  console.log(buildingBlock)
}
